<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.i7.eatit.domain.user.dao.BlockMapper">

    <resultMap id="blockUserMap" type="com.i7.eatit.domain.user.dto.BlockInfoDetailDTO">
        <id property="blockId" column="BLOCK_ID"/>
        <result property="memberId" column="BLOCKING_MEMBER_ID"/>
        <result property="blockDate" column="BLOCK_DATE"/>
        <collection property="blockedUserPhotoProfile" ofType="com.i7.eatit.domain.user.dto.UserPhotoProfileDTO">
            <id property="memberId" column="MEMBER_ID"/>
            <result property="nickname" column="NICKNAME"/>
            <result property="phoneNumber" column="PHONE_NUMBER"/>
            <result property="withdrawalStatus" column="WITHDRAWAL_STATUS"/>
            <result property="reportedCount" column="REPORTED_COUNT"/>
            <association property="memberPhoto" javaType="com.i7.eatit.domain.picture.dto.MemberPhotoDTO">
                <result property="photoName" column="PHOTO_NAME"/>
                <result property="photoPath" column="PHOTO_PATH"/>
            </association>
        </collection>
    </resultMap>


    <select id="findBlockedMember" parameterType="_int" resultMap="blockUserMap">
        SELECT
              A.BLOCK_ID
            , A.BLOCK_DATE
            , A.BLOCKING_MEMBER_ID
            , D.MEMBER_ID
            , D.NICKNAME
            , D.PHONE_NUMBER
            , D.WITHDRAWAL_STATUS
            , D.REPORTED_COUNT
            , D.PHOTO_PATH
            , D.PHOTO_NAME
        FROM TBL_BLOCK A
        JOIN (
            SELECT B.MEMBER_ID
                 , B.NICKNAME
                 , B.PHONE_NUMBER
                 , B.WITHDRAWAL_STATUS
                 , B.REPORTED_COUNT
                 , C.PHOTO_PATH
                 , C.PHOTO_NAME
            FROM TBL_MEMBER B
            JOIN TBL_MEMBER_PHOTO C
            ON B.MEMBER_ID = C.MEMBER_ID
        ) D
        ON A.BLOCKED_MEMBER_ID= D.MEMBER_ID
        WHERE A. BLOCKING_MEMBER_ID=#{memberID}
    </select>

</mapper>

